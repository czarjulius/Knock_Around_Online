@model IEnumerable<NewKnockaboutonline.Models.SIZE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/_AdminLayout.cshtml";
}


<p>
    @Html.ActionLink("Add New Size", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SizeId }) |
            @Html.ActionLink("Details", "Details", new { id=item.SizeId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SizeId })
        </td>
    </tr>
}

</table>
